DROP TABLE IMB_BOARD;
DROP TABLE IMB_BOARD_AUTH;
DROP TABLE IMB_ARTICLE;
DROP TABLE IMB_ARTICLE_READER;
DROP TABLE IMB_COMMENT;
DROP TABLE IMB_USER;
DROP TABLE IMB_ROLE;
DROP TABLE IMB_URL_AUTH;
DROP TABLE IMB_MENU;
DROP TABLE IMB_DATA;
DROP TABLE IMB_VISITOR;

CREATE TABLE IMB_BOARD
(
	ID VARCHAR(100),
	NAME VARCHAR(300),
	PRIORITY INT,
	DESCRIPTION VARCHAR(2000),
	USE_YN CHAR(1) DEFAULT 'Y',
	CREATOR VARCHAR(100),

	PRIMARY KEY(ID)
);

CREATE TABLE IMB_BOARD_AUTH
(
	BOARD_ID VARCHAR(100),
	VIEW_LIST_LEVEL INT,
	VIEW_DETAIL_LEVEL INT,
	WRITE_LEVEL INT,
	WRITE_COMMENT_LEVEL INT,

	PRIMARY KEY(BOARD_ID)
);

CREATE TABLE IMB_ARTICLE
(
	BOARD_ID VARCHAR(100),
	SEQ INT,
	SUBJECT VARCHAR(200),
	CONTENT BLOB,
	REGISTER_DATE TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
	HIT INT DEFAULT 0,
	GOOD INT DEFAULT 0,
	BAD INT DEFAULT 0,
	WRITER_ID VARCHAR(100),
	WRITER_NAME VARCHAR(500),
	GROUP_ID INT,
	PARENT_SEQ INT,
	IS_NOTICE CHAR(1),
	STATUS INT DEFAULT 1,
	THUMBNAIL_URL VARCHAR(1000),
	TAG VARCHAR(1000),
	PASSWORD VARCHAR(100),

	PRIMARY KEY(BOARD_ID, SEQ)
);

CREATE TABLE IMB_ARTICLE_READER
(
	BOARD_ID VARCHAR(100),
	ARTICLE_SEQ INT,
	USER_ID VARCHAR(200),
	STATUS INT,

	PRIMARY KEY(BOARD_ID, ARTICLE_SEQ, USER_ID)
);

CREATE TABLE IMB_COMMENT
(
	BOARD_ID VARCHAR(100),
	ARTICLE_SEQ INT,
	SEQ INT,
	CONTENT VARCHAR(5000),
	REGISTER_DATE TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
	GOOD INT DEFAULT 0,
	BAD INT DEFAULT 0,
	WRITER_ID VARCHAR(100),
	WRITER_NAME VARCHAR(500),
	GROUP_ID INT,
	PARENT_SEQ INT,
	PARENT_WRITER_ID VARCHAR(100),
	PARENT_WRITER_NAME VARCHAR(100),
	STATUS INT DEFAULT 0,
	PASSWORD VARCHAR(100),

	PRIMARY KEY(BOARD_ID, ARTICLE_SEQ, SEQ)
);

CREATE TABLE IMB_USER
(
	ID VARCHAR(100),
	DISPLAY_ID VARCHAR(100),
	NAME VARCHAR(500),
	PASSWORD VARCHAR(1000),
	PROVIDER VARCHAR(100),
	PROFILE_IMG_URL VARCHAR(1000),
	REGISTER_DATE TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
	USER_STATUS CHAR(1) DEFAULT 'Y',
	DROP_OUT_DATE TIMESTAMP,
	LEVEL INT,
	POINT INT DEFAULT 0,
	LAST_ACCESS_DATE TIMESTAMP,
	ENCRYPT_KEY VARCHAR(10),

	PRIMARY KEY(ID)
);

CREATE TABLE IMB_ROLE
(
	LEVEL INT,
	NAME VARCHAR(500),
	POINT INT,
	EDITABLE CHAR(1) DEFAULT 'Y',

	PRIMARY KEY(LEVEL)
);

CREATE TABLE IMB_URL_AUTH
(
	URL VARCHAR(200),
	LEVEL INT,
	USE_YN CHAR(1),
	EDITABLE CHAR(1) DEFAULT 'Y',

	PRIMARY KEY(URL)
);

CREATE TABLE IMB_MENU
(
	ID VARCHAR(100),
	NAME VARCHAR(500),
	TYPE INT DEFAULT 0,
	PARAMETER VARCHAR(100),
	PRIORITY INT,
	VIEW_LEVEL VARCHAR(10),
	PARENT_MENU_ID VARCHAR(100),
	GROUP_ID VARCHAR(100),
	CREATOR VARCHAR(100),

	PRIMARY KEY(ID)
);

CREATE TABLE IMB_DATA
(
	ID VARCHAR(100),
	TYPE VARCHAR(10),
	DATA BLOB,

	PRIMARY KEY(ID)
);

CREATE TABLE IMB_VISITOR
(
	IP VARCHAR(50),
	USER_AGENT VARCHAR(300),
	REFERER VARCHAR(1000),
	ACCESS_DATE VARCHAR(20)
);
